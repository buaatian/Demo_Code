<!--pages/Chapter_6/6_2_text/6_2_text.wxml-->
<view class="container">
  <view class="page-head">
    <view class="page-head-title">text组件</view>
    <view class="page-head-line"></view>
  </view>
  <view class="page-body">
    <view class="page-section page-section-spacing">
      <view class="text-box" scroll-y="true" scroll-top="{{scrollTop}}">
        <text>{{text}}</text>
      </view>
      <button disabled="{{!canAdd}}" bindtap="add">添加一行</button>
      <button disabled="{{!canRemove}}" bindtap="remove">移除一行</button>
    </view>
  </view>
</view>